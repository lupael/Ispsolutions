APP_NAME="ISP Solution"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_CURRENCY=$

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Main Database Configuration
# SECURITY WARNING: Change these credentials for production/staging environments
# Note: DB_HOST=db is configured for Docker Compose. Use 127.0.0.1 for local development.
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=ispsolution
DB_USERNAME=ispsolution
DB_PASSWORD=secret

# Tenancy Configuration
# Multi-tenant settings for domain/subdomain-based tenant resolution
TENANCY_ENABLED=true
TENANCY_DEFAULT_DOMAIN=localhost
TENANCY_REQUIRE_TENANT=false

# RADIUS Database Configuration (Separate DB for RADIUS operations)
# SECURITY WARNING: Change these credentials for production/staging environments
# Note: RADIUS_DB_HOST=radius-db is configured for Docker Compose.
RADIUS_DB_CONNECTION=mysql
RADIUS_DB_HOST=radius-db
RADIUS_DB_PORT=3307
RADIUS_DB_DATABASE=radius
RADIUS_DB_USERNAME=radius
RADIUS_DB_PASSWORD=secret

# RADIUS Server Configuration
RADIUS_SERVER_IP=127.0.0.1
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813
RADIUS_INTERIM_UPDATE=5m
RADIUS_PRIMARY_AUTH=hybrid
RADIUS_NETWATCH_ENABLED=true
RADIUS_NETWATCH_INTERVAL=1m
RADIUS_NETWATCH_TIMEOUT=1s

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# MikroTik API Configuration
MIKROTIK_API_TIMEOUT=30
MIKROTIK_DEFAULT_PORT=8728
MIKROTIK_DEFAULT_USERNAME=admin
MIKROTIK_DEFAULT_PASSWORD=

# MikroTik PPP Configuration
MIKROTIK_PPP_LOCAL_ADDRESS=10.0.0.1

# MikroTik Backup Settings
MIKROTIK_AUTO_BACKUP=true
MIKROTIK_BACKUP_RETENTION_DAYS=30

# MikroTik Provisioning Settings
MIKROTIK_AUTO_PROVISION=true
MIKROTIK_UPDATE_ON_PASSWORD_CHANGE=true

# IPAM Configuration
IPAM_ALLOCATION_TIMEOUT=30
IPAM_LOCK_TIMEOUT=10
IPAM_DEFAULT_DNS_SERVERS=8.8.8.8,8.8.4.4

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# WhatsApp Business API Configuration
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_APP_SECRET=
WHATSAPP_DEFAULT_COUNTRY_CODE=880
WHATSAPP_VERIFY_TOKEN=

# Telegram Bot Configuration
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Analytics Configuration
ANALYTICS_AVG_CUSTOMER_LIFE_MONTHS=12

# Billing Configuration
BILLING_TAX_RATE=0
BILLING_GRACE_PERIOD=7
BILLING_INVOICE_PREFIX=INV
BILLING_PAYMENT_PREFIX=PAY
BILLING_DAILY_BASE_DAYS=30

# SMS Gateway Configuration
SMS_ENABLED=false
SMS_DEFAULT_GATEWAY=twilio

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Nexmo/Vonage SMS Configuration
NEXMO_API_KEY=
NEXMO_API_SECRET=
NEXMO_FROM_NUMBER=

# BulkSMS Configuration
BULKSMS_USERNAME=
BULKSMS_PASSWORD=

# Bangladeshi SMS Gateway Configuration
BD_SMS_API_KEY=
BD_SMS_SENDER_ID=
BD_SMS_API_URL=
