includes:
    - ./vendor/larastan/larastan/extension.neon
    # Baseline file for existing legacy PHPStan issues only.
    # Cleanup plan: do not add new entries; fix and remove baseline ignores incrementally in each sprint until this file can be deleted.
    # Tracking: link this plan to a GitHub issue (e.g. "PHPStan baseline cleanup") so progress and target timelines are visible.
    - phpstan-baseline.neon

parameters:
    paths:
        - app
        - tests

    # Level 5 of 9 (adjust as needed)
    level: 5
    
    # Treat PHPDoc types as certain (suppresses test assertion warnings)
    treatPhpDocTypesAsCertain: false
        
    excludePaths:
        - ./*/*/FileToBeExcluded.php
